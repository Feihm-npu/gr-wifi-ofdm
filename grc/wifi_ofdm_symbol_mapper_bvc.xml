<?xml version="1.0"?>
<block>
  <name>Symbol Mapper</name>
  <key>wifi_ofdm_symbol_mapper_bvc</key>
  <category>[wifi_ofdm]</category>
  <import>import wifi_ofdm</import>
  <make>wifi_ofdm.symbol_mapper_bvc($rate,$tag)</make>
  <!-- Make one 'param' node for every Parameter you want settable from the GUI.
       Sub-nodes:
       * name
       * key (makes the value accessible as $keyname, e.g. in the make node)
       * type -->
  <param>
    <name>Data Rates</name>
    <key>rate</key>
    <value>0</value>
    <type>int</type>
    <option>
      <name>6Mbps</name>
      <key>0</key>
    </option>
    <option>
      <name>9Mbps</name>
      <key>1</key>
    </option>
    <option>
      <name>12Mbps</name>
      <key>2</key>
    </option>
    <option>
      <name>18Mbps</name>
      <key>3</key>
    </option>
    <option>
      <name>24Mbps</name>
      <key>4</key>
    </option>
    <option>
      <name>36Mbps</name>
      <key>5</key>
    </option>
    <option>
      <name>48Mbps</name>
      <key>6</key>
    </option>
    <option>
      <name>54Mbps</name>
      <key>7</key>
    </option>
  </param>
  <param>
    <name>Tag name</name>
    <key>tag</key>
    <value>"packet_len"</value>
    <type>string</type>
  </param>

  <!-- Make one 'sink' node per input. Sub-nodes:
       * name (an identifier for the GUI)
       * type
       * vlen
       * optional (set to 1 for optional inputs) -->
  <sink>
    <name>in</name>
    <type>byte</type>
  </sink>

  <!-- Make one 'source' node per output. Sub-nodes:
       * name (an identifier for the GUI)
       * type
       * vlen
       * optional (set to 1 for optional inputs) -->
  <source>
    <name>out</name>
    <type>complex</type>
    <vlen>64</vlen>
  </source>
</block>
