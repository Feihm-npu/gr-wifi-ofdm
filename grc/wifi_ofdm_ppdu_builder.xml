<?xml version="1.0"?>
<block>
  <name>PPDU Builder</name>
  <key>wifi_ofdm_ppdu_builder</key>
  <category>[wifi_ofdm]</category>
  <import>import wifi_ofdm</import>
  <make>wifi_ofdm.ppdu_builder($seed,$rate)</make>
  <!-- Make one 'param' node for every Parameter you want settable from the GUI.
       Sub-nodes:
       * name
       * key (makes the value accessible as $keyname, e.g. in the make node)
       * type -->
  <param>
    <name>Seed</name>
    <key>seed</key>
    <value>255</value>
    <type>int</type>
  </param>
  <param>
    <name>Rate</name>
    <key>rate</key>
    <value>0</value>
    <type>int</type>
    <option>
      <name>6MBps</name>
      <key>0</key>
    </option>
    <option>
      <name>9MBps</name>
      <key>1</key>
    </option>
    <option>
      <name>12MBps</name>
      <key>2</key>
    </option>
    <option>
      <name>18MBps</name>
      <key>3</key>
    </option>
    <option>
      <name>24MBps</name>
      <key>4</key>
    </option>
    <option>
      <name>36MBps</name>
      <key>5</key>
    </option>
    <option>
      <name>48MBps</name>
      <key>6</key>
    </option>
    <option>
      <name>54MBps</name>
      <key>7</key>
    </option>
  </param>

  <!-- Make one 'sink' node per input. Sub-nodes:
       * name (an identifier for the GUI)
       * type
       * vlen
       * optional (set to 1 for optional inputs) -->
  <sink>
    <name>plcp_in</name>
    <type>message</type>
  </sink>

  <!-- Make one 'source' node per output. Sub-nodes:
       * name (an identifier for the GUI)
       * type
       * vlen
       * optional (set to 1 for optional inputs) -->
  <source>
    <name>ppdu_out</name>
    <type>message</type>
  </source>
</block>
